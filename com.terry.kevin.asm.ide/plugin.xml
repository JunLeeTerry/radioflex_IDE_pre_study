            </command>
            <command
                  commandId="com.terry.kevin.asm.ide.commandrun"
                  label="8"
                  style="push">
            </command>
            <command
                  commandId="com.terry.kevin.asm.ide.commandstep"
                  label="9"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.terry.kevin.asm.ide.handler.BuildSetting"
            commandId="com.terry.kevin.asm.ide.commandbuildsetting">
      </handler>
      <handler
            class="com.terry.kevin.asm.ide.handler.DebugSetting"
            commandId="com.terry.kevin.asm.ide.commanddebugsetting">
      </handler>
   </extension>

</plugin>
