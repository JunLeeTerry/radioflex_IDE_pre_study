<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.terry.kevin.asm.ide.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="com.terry.kevin.asm.ide.Perspective"
            id="com.terry.kevin.asm.ide.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.terry.kevin.asm.ide.application"
            name="Hello RCP">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.terry.kevin.asm.ide.view.TKProjectExplorer"
            id="com.terry.kevin.asm.ide.view.tkprojectexplorer"
            name="TKProjectExplorer"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="com.terry.kevin.asm.ide.view.tkprojectexplorer">
         <includes>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.*">
            </contentExtension>
         </includes>
      </viewerContentBinding>
      <viewerActionBinding
            viewerId="com.terry.kevin.asm.ide.view.tkprojectexplorer">
         <includes>
            <actionExtension
                  pattern="org.eclipse.ui.navigator.resources.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.terry.kevin.asm.ide.editor.TKEditor"
            default="false"
            extensions="asm"
            id="com.terry.kevin.asm.ide.editor.tkeditor"
            name="TKEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
        <menu
         	label="File">
         <command
               commandId="org.eclipse.ui.newWizard"
               label="New File ..."
               style="push"
               tooltip="new a file">
         </command>
         <command
               commandId="org.eclipse.ui.edit.text.openLocalFile"
               label="Open File ..."
               style="push"
               tooltip="open a file">
         </command>
         <command
               commandId="org.eclipse.ui.file.close"
               label="Close File ..."
               style="push"
               tooltip="close a file">
         </command>
         <separator
               name="com.terry.kevin.asm.ide.separatorfile1"
               visible="true">
         </separator>
		 <command
		       commandId="org.eclipse.ui.newWizard"
		       label="New Project ..."
		       style="push"
		       tooltip="new a project">
		 </command>
		 <command
		 	   commandId="org.eclipse.ui.project.openProject"
		 	   label="Open Project ..."
		 	   style="push"
		 	   tooltip="open a project">
		 </command>
		 <command
		 	   commandId="org.eclipse.ui.project.closeProject"
		 	   label="Close Project ..."
		 	   style="push"
		 	   tooltip="close a project">
		 </command>
		 <separator
               name="com.terry.kevin.asm.ide.separatorfile2"
               visible="true">
         </separator>
         <command
		 	   commandId="org.eclipse.ui.file.save"
		 	   label="Save File ..."
		 	   style="push"
		 	   tooltip="save a file">
		 </command>
		 <command
		 	   commandId="org.eclipse.ui.file.saveAs"
		 	   label="Save As ..."
		 	   style="push"
		 	   tooltip="save as ...">
		 </command>
		 <separator
               name="com.terry.kevin.asm.ide.separatorfile3"
               visible="true">
         </separator>
   <menu
         label="Project Setting ...">
      <command
            commandId="com.terry.kevin.asm.ide.commandbuildsetting"
            label="Build Setting ..."
            style="push">
      </command>
      <command
            commandId="com.terry.kevin.asm.ide.commanddebugsetting"
            label="Debug Setting ..."
            style="push">
      </command>
   </menu>
		 <command
		 	   commandId="org.eclipse.ui.file.exit"
		 	   label="Exit"
		 	   style="push"
		 	   tooltip="exit">
		 </command>
		</menu>
		<menu
         	label="Edit">
         	<command
         		commandId="org.eclipse.ui.edit.redo"
         		label="Redo"
         		style="push">
         	</command>
         	<command
         		commandId="org.eclipse.ui.edit.undo"
         		label="Undo"
         		style="push">
         	</command>
         	<separator
               name="com.terry.kevin.asm.ide.separatoreditor1"
               visible="true">
            </separator>
         	<command
         		commandId="org.eclipse.ui.edit.copy"
         		label="Copy"
         		style="push">
         	</command>
         	<command
         		commandId="org.eclipse.ui.edit.paste"
         		label="Paste"
         		style="push">
         	</command>
         	<command
         		commandId="org.eclipse.ui.edit.cut"
         		label="Cut"
         		style="push">
         	</command>
         	<separator
         		name="com.terry.kevin.asm.ide.separatoreditor2"
         		visible="true">
         	</separator>
         	<command
         		commandId="org.eclipse.ui.edit.findReplace"
         		label="Find and Replace"
         		style="push">
         	</command>
        </menu>
  <menu
        label="Debug">
     <command
           commandId="com.terry.kevin.asm.ide.command3"
           label="Build"
           style="push">
     </command>
     <separator
           name="com.terry.kevin.asm.ide.separatordebug1"
           visible="true">
     </separator>
     <command
           commandId="com.terry.kevin.asm.ide.command4"
           label="Start"
           style="push">
     </command>
     <command
           commandId="com.terry.kevin.asm.ide.command5"
           label="Stop"
           style="push">
     </command>
     <command
           commandId="com.terry.kevin.asm.ide.command6"
           label="Continue"
           style="push">
     </command>
     <command
           commandId="com.terry.kevin.asm.ide.command7"
           label="Step"
           style="push">
     </command>
     <separator
           name="com.terry.kevin.asm.ide.separator2">
     </separator>
     <command
           commandId="com.terry.kevin.asm.ide.command8"
           label="Set Breakpoint"
           style="push">
     </command>
     <command
           commandId="com.terry.kevin.asm.ide.command9"
           label="Remove Breakpoint"
           style="push">
     </command>
     <separator
           name="com.terry.kevin.asm.ide.separator3">
     </separator>
     <command
     	   commandId="com.terry.kevin.asm.ide.commandswitchmode"
           label="Switch Mode"
           style="push">
     </command>
  </menu>
  <menu
        label="Help">
     <command
           commandId="com.terry.kevin.asm.ide.commandwelcome"
           label="Welcome"
           style="push">
     </command>
     <separator
           name="com.terry.kevin.asm.ide.separatorhelp1"
           visible="true">
     </separator>
     <command
           commandId="com.terry.kevin.asm.ide.commandabout"
           label="About ..."
           style="push">
     </command>
  </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="com.terry.kevin.asm.ide.toolbar">
            <command
                  commandId="org.eclipse.ui.newWizard"
                  label="1"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.text.openLocalFile"
                  label="2"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.newWizard"
                  label="3"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.text.openLocalFile"
                  label="4"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.save"
                  label="5"
                  style="push">
            </command>
            <separator
                  name="com.terry.kevin.asm.ide.separatortoolbar"
                  visible="true">
            </separator>
            <command
                  commandId="com.terry.kevin.asm.ide.commandbuild"
                  label="6"
                  style="push">
            </command>
            <command
                  commandId="com.terry.kevin.asm.ide.commandstart"
                  label="7"
